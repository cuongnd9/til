{
  "name": "typescript-template",
  "version": "1.0.0",
  "main": "src/basic.ts",
  "description": "üê¢ TypeScript template",
  "repository": "https://github.com/kimcuong060498/typescript-template.git",
  "author": "kim cuong",
  "scripts": {
    "run:basic": "nodemon --ignore build/ --exec ts-node src/basic.ts",
    "run:other": "nodemon --ignore build/ --exec ts-node src/other.ts",
    "prebuild": "rm -rf build",
    "build": "tsc",
    "start": "node ./build/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {}
  },
  "dependencies": {
    "diana-js": "^0.7.0",
    "hera-js": "^0.4.0",
    "juno-js": "^0.1.1",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.0",
    "typescript": "^4.0.2"
  }
